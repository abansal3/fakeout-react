{
  "manifest_version": 2,
  "name": "Fakeout (React)",
  "description": "CrowdSourcing Truth in Social Media",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "http://localhost:3000",
    "notifications",
    "tabs", 
    "management"
  ]
}